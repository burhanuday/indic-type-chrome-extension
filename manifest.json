{
  "name": "Transliterate Typing",
  "description": "A chrome plugin to type in any language!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "src/js/inject.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["./src/js/content-script.js"]
    }
  ],
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "src/assets/images/get_started16.png",
      "32": "src/assets/images/get_started32.png",
      "48": "src/assets/images/get_started48.png",
      "128": "src/assets/images/get_started128.png"
    }
  },
  "icons": {
    "16": "src/assets/images/get_started16.png",
    "32": "src/assets/images/get_started32.png",
    "48": "src/assets/images/get_started48.png",
    "128": "src/assets/images/get_started128.png"
  }
}
